<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Donate Resources - Disaster Management</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f7fa;
      color: #333;
    }
    
    nav {
      background-color: #2f3542;
      padding: 1rem 2rem;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
    }
    
    .container {
      max-width: 700px;
      margin: 3rem auto;
      padding: 2rem;
    }
    
    .donate-card {
      background: white;
      border-radius: 10px;
      padding: 2.5rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }
    
    h1 {
      margin-top: 0;
      color: #2f3542;
      font-size: 1.8rem;
      margin-bottom: 0.5rem;
    }
    
    .report-info {
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: 6px;
      margin-bottom: 2rem;
      border-left: 4px solid #1e90ff;
    }
    
    .report-info h2 {
      margin-top: 0;
      font-size: 1.3rem;
      color: #2f3542;
    }
    
    .report-info p {
      margin: 0.5rem 0;
    }
    
    .status-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      margin-left: 0.5rem;
    }
    
    .status-pending {
      background-color: #fff3cd;
      color: #856404;
    }
    
    .status-critical {
      background-color: #f8d7da;
      color: #721c24;
    }
    
    .status-resolved {
      background-color: #d4edda;
      color: #155724;
    }
    
    .form-group {
      margin-bottom: 1.5rem;
    }
    
    label {
      font-weight: 600;
      margin-bottom: 0.5rem;
      display: block;
    }
    
    select, input {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ddd;
      border-radius: 6px;
      box-sizing: border-box;
    }
    
    .requirement-item {
      margin-bottom: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .requirement-item .progress {
      flex: 1;
      height: 8px;
      background-color: #e9ecef;
      border-radius: 4px;
      margin: 0 10px;
      overflow: hidden;
    }
    
    .requirement-item .progress-bar {
      height: 100%;
      background-color: #1e90ff;
    }
    
    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
      cursor: pointer;
      border: none;
      font-size: 1rem;
    }
    
    .btn-primary {
      background-color: #1e90ff;
      color: white;
    }
    
    .btn-secondary {
      background-color: #6c757d;
      color: white;
      margin-right: 0.5rem;
    }
    
    .requirements-list {
      background-color: #f8f9fa;
      border-radius: 6px;
      padding: 1rem;
      margin-bottom: 1.5rem;
    }
    
    .hint-text {
      color: #6c757d;
      font-size: 0.9rem;
      margin-top: 0.5rem;
    }
    
    .alert {
      padding: 0.75rem;
      margin-bottom: 1rem;
      border-radius: 6px;
    }
    
    .alert-danger {
      background-color: #ffe5e5;
      color: #d63031;
      border: 1px solid #ffcccc;
    }
  </style>
</head>
<body>
  <nav>
    <a href="/">Home</a>
    <a href="/reports">Reports</a>
    <a href="/media">Media</a>
    <a href="/livemap">Live Map</a>
    <a href="/donor/dashboard">My Dashboard</a>
    <span style="margin-left: auto; color: white;">
      <% if(currentUser) { %>
        Welcome, <%= currentUser.name || currentUser.username %> |
        <a href="/logout">Logout</a>
      <% } %>
    </span>
  </nav>
  
  <div class="container">
    <div class="donate-card">
      <h1>Donate Resources</h1>
      
      <% if(error && error.length) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>
      
      <div class="report-info">
        <h2><%= report.name %>
          <span class="status-badge status-<%= report.status %>">
            <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
          </span>
        </h2>
        <p><strong>Disaster Type:</strong> <%= report.disasterType %></p>
        <p><strong>Location:</strong> Lat <%= report.location.lat %>, Lng <%= report.location.lng %></p>
        <p><strong>Date Reported:</strong> <%= new Date(report.createdAt).toLocaleDateString() %></p>
      </div>
      
      <h3>Required Resources</h3>
      <div class="requirements-list">
        <% 
        let hasRequirements = false;
        
        if (report.requirements) {
          const r = report.requirements;
          
          // Food
          if (r.food && r.food.needed && r.food.remainingNeeded > 0) { 
            hasRequirements = true;
            const fulfilled = r.food.fulfilled || 0;
            const total = r.food.quantity || 0;
            const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            const remaining = Math.max(0, total - fulfilled);
          %>
            <div class="requirement-item">
              <span><strong>Food Supplies:</strong></span>
              <div class="progress">
                <div class="progress-bar" style="width: <%= percentage %>%"></div>
              </div>
              <span><%= remaining %> packs needed</span>
            </div>
          <% } 
          
          // Water
          if (r.water && r.water.needed && r.water.remainingNeeded > 0) { 
            hasRequirements = true;
            const fulfilled = r.water.fulfilled || 0;
            const total = r.water.quantity || 0;
            const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            const remaining = Math.max(0, total - fulfilled);
          %>
            <div class="requirement-item">
              <span><strong>Clean Water:</strong></span>
              <div class="progress">
                <div class="progress-bar" style="width: <%= percentage %>%"></div>
              </div>
              <span><%= remaining %> liters needed</span>
            </div>
          <% } 
          
          // Medicine
          if (r.medicine && r.medicine.needed && r.medicine.remainingNeeded > 0) { 
            hasRequirements = true;
            const fulfilled = r.medicine.fulfilled || 0;
            const total = r.medicine.quantity || 0;
            const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            const remaining = Math.max(0, total - fulfilled);
          %>
            <div class="requirement-item">
              <span><strong>Medical Supplies:</strong></span>
              <div class="progress">
                <div class="progress-bar" style="width: <%= percentage %>%"></div>
              </div>
              <span><%= remaining %> kits needed</span>
            </div>
          <% } 
          
          // Clothing
          if (r.clothing && r.clothing.needed && r.clothing.remainingNeeded > 0) { 
            hasRequirements = true;
            const fulfilled = r.clothing.fulfilled || 0;
            const total = r.clothing.quantity || 0;
            const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            const remaining = Math.max(0, total - fulfilled);
          %>
            <div class="requirement-item">
              <span><strong>Clothing:</strong></span>
              <div class="progress">
                <div class="progress-bar" style="width: <%= percentage %>%"></div>
              </div>
              <span><%= remaining %> sets needed</span>
            </div>
          <% } 
          
          // Shelter
          if (r.shelter && r.shelter.needed && r.shelter.remainingNeeded > 0) { 
            hasRequirements = true;
            const fulfilled = r.shelter.fulfilled || 0;
            const total = r.shelter.quantity || 0;
            const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            const remaining = Math.max(0, total - fulfilled);
          %>
            <div class="requirement-item">
              <span><strong>Temporary Shelter:</strong></span>
              <div class="progress">
                <div class="progress-bar" style="width: <%= percentage %>%"></div>
              </div>
              <span><%= remaining %> units needed</span>
            </div>
          <% } 
          
          // Volunteers
          if (r.volunteers && r.volunteers.needed && r.volunteers.remainingNeeded > 0) { 
            hasRequirements = true;
            const fulfilled = r.volunteers.fulfilled || 0;
            const total = r.volunteers.quantity || 0;
            const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            const remaining = Math.max(0, total - fulfilled);
          %>
            <div class="requirement-item">
              <span><strong>Volunteers:</strong></span>
              <div class="progress">
                <div class="progress-bar" style="width: <%= percentage %>%"></div>
              </div>
              <span><%= remaining %> people needed</span>
            </div>
          <% } 
          
          // Other
          if (r.other && r.other.needed && !r.other.fulfilled) { 
            hasRequirements = true; %>
            <div class="requirement-item">
              <span><strong>Other Requirements:</strong></span>
              <span><%= r.other.details %></span>
            </div>
          <% }
        }
        
        if (!hasRequirements) { %>
          <p>All requirements have been fulfilled. Thank you for your support!</p>
        <% } %>
      </div>
      
      <% if (hasRequirements) { %>
      <form action="/donate/<%= report._id %>" method="POST">
        <div class="form-group">
          <label for="requirementType">What would you like to donate?</label>
          <select id="requirementType" name="requirementType" required>
            <option value="" disabled selected>-- Select a resource type --</option>
            <% if (report.requirements.food && report.requirements.food.needed && report.requirements.food.remainingNeeded > 0) { %>
              <option value="food">Food Supplies</option>
            <% } %>
            
            <% if (report.requirements.water && report.requirements.water.needed && report.requirements.water.remainingNeeded > 0) { %>
              <option value="water">Clean Water</option>
            <% } %>
            
            <% if (report.requirements.medicine && report.requirements.medicine.needed && report.requirements.medicine.remainingNeeded > 0) { %>
              <option value="medicine">Medical Supplies</option>
            <% } %>
            
            <% if (report.requirements.clothing && report.requirements.clothing.needed && report.requirements.clothing.remainingNeeded > 0) { %>
              <option value="clothing">Clothing</option>
            <% } %>
            
            <% if (report.requirements.shelter && report.requirements.shelter.needed && report.requirements.shelter.remainingNeeded > 0) { %>
              <option value="shelter">Temporary Shelter</option>
            <% } %>
            
            <% if (report.requirements.volunteers && report.requirements.volunteers.needed && report.requirements.volunteers.remainingNeeded > 0) { %>
              <option value="volunteers">Volunteer Services</option>
            <% } %>
            
            <% if (report.requirements.other && report.requirements.other.needed && !report.requirements.other.fulfilled) { %>
              <option value="other">Other Resources</option>
            <% } %>
          </select>
        </div>
        
        <div class="form-group">
          <label for="quantity">Quantity</label>
          <input type="number" id="quantity" name="quantity" min="1" required>
          <p class="hint-text">Enter the amount you can provide</p>
        </div>
        
        <div class="form-actions">
          <a href="/reports/<%= report._id %>" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">Pledge Donation</button>
        </div>
      </form>
      <% } else { %>
      <div class="form-actions">
        <a href="/reports/<%= report._id %>" class="btn btn-secondary">Back to Report</a>
      </div>
      <% } %>
    </div>
  </div>
</body>
</html>